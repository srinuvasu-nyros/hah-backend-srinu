<%- include('../partials/_header.ejs') %>
<link href="./plugins/tables/css/datatable/dataTables.bootstrap4.min.css" rel="stylesheet">
        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title d-inline">Parent Organizations</h4>
                                <a href="/organizations/new" role="button" class="btn mb-1 btn-flat btn-outline-primary pull-right"><i class="fa fa-plus color-info"></i> Add Parent Organization</a>
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered zero-configuration">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Denomination</th>
                                                <th>City</th>
                                                <th>State</th>
                                                <th>Country</th>
                                                <th>Zip Code</th>
                                                <th>Child Organizations</th>
                                                <th colspan="2">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (var i = 0; i < organizations.length; i++) {%>
                                            <tr>
                                                <td><%= organizations[i].name %></td>
                                                <td><%= organizations[i].denomination %></td>
                                                <td><%= organizations[i].city %></td>
                                                <td><%= organizations[i].state %></td>
                                                <td><%= organizations[i].country %></td>
                                                <td><%= organizations[i].zipcode %></td>
                                                <td><%= organizations[i].churches.length %></td>
                                                <td><span><a href="/organizations/<%= organizations[i]._id %>/" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-pencil color-muted m-r-5"></i></span>
                                                </td>
                                            </tr>
                                            <% }%>
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>Name</th>
                                                <th>Denomination</th>
                                                <th>City</th>
                                                <th>State</th>
                                                <th>Country</th>
                                                <th>Zip Code</th>
                                                <th>Child Organizations</th>
                                                <th colspan="2">Actions</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #/ container -->
        </div>
        <!--**********************************
            Content body end
        ***********************************-->
<%- include('../partials/_footer.ejs') %>
<script src="/plugins/tables/js/jquery.dataTables.min.js"></script>
<script src="/plugins/tables/js/datatable/dataTables.bootstrap4.min.js"></script>
<script src="/plugins/tables/js/datatable-init/datatable-basic.min.js"></script>