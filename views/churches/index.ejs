<%- include('../partials/_header.ejs') %>
<link href="./plugins/tables/css/datatable/dataTables.bootstrap4.min.css" rel="stylesheet">
        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title d-inline">Child Organizations</h4>
                                <a href="/churches/new" role="button" class="btn mb-1 btn-flat btn-outline-primary pull-right"><i class="fa fa-plus color-info"></i> Add Child Organization</a>
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered zero-configuration">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Parent Organization</th>
                                                <th>Country</th>
                                                <th>State</th>
                                                <th>City</th>
                                                <th>Email</th>
                                                <th>Mobile</th>
                                                <th>Website</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (var i = 0; i < churches.length; i++) {%>
                                            <tr>
                                                <td><%= churches[i].name %></td>
                                                <td><a href="/organizations/<%= churches[i].parent_organization._id %>"><%= churches[i].parent_organization.name %></a></td>
                                                <td><%= churches[i].country%></td>
                                                <td><%= churches[i].state %></td>
                                                <td><%= churches[i].city %></td>
                                                <td><%= churches[i].email %></td>
                                                <td><%= churches[i].mobile%></td>
                                                <td><a href="<%= churches[i].website %>"><%= churches[i].website %></a></td>
                                                <td><span><a href="/churches/<%= churches[i]._id %>/" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-pencil color-muted m-r-5"></i></a></span>
                                                </td>
                                            </tr>
                                            <% }%>
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>Name</th>
                                                <th>Parent Organization</th>
                                                <th>Country</th>
                                                <th>State</th>
                                                <th>City</th>
                                                <th>Email</th>
                                                <th>Mobile</th>
                                                <th>Website</th>
                                                <th>Actions</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #/ container -->
        </div>
        <!--**********************************
            Content body end
        ***********************************-->
<%- include('../partials/_footer.ejs') %>
<script src="/plugins/tables/js/jquery.dataTables.min.js"></script>
<script src="/plugins/tables/js/datatable/dataTables.bootstrap4.min.js"></script>
<script src="/plugins/tables/js/datatable-init/datatable-basic.min.js"></script>